# Configuration de production pour Orion AD Guardian
PRODUCTION_MODE=true

# Configuration du serveur
HOST=0.0.0.0
PORT=8006
WORKERS=4

# Sécurité
API_KEY=orion-production-secret-key-2024-change-me
ALLOWED_ORIGINS=http://localhost:3180,https://your-domain.com

# Base de données (pour future implémentation)
DATABASE_URL=postgresql://user:password@localhost:5432/orion_ad_guardian

# Configuration des alertes
MAX_ALERTS=10000
ALERT_RETENTION_DAYS=90

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/orion-ad-guardian/app.log

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Notifications
SMTP_HOST=smtp.company.com
SMTP_PORT=587
SMTP_USER=alerts@company.com
SMTP_PASSWORD=your-smtp-password

# Intégrations
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
TEAMS_WEBHOOK_URL=https://your-company.webhook.office.com/webhookb2/YOUR/TEAMS/WEBHOOK 